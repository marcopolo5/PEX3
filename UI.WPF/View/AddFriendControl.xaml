<UserControl x:Class="UI.WPF.View.AddFriendControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
             xmlns:local="clr-namespace:UI.WPF.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid Margin="-2,-2,-2,-2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="250"/>
        </Grid.ColumnDefinitions>



        <StackPanel 
                            Orientation="Horizontal"
                            Height="100"
                            VerticalAlignment="Top"
                            >

            <TextBox Margin="20 10"
                             Style="{StaticResource MaterialDesignFloatingHintTextBox}"
                             materialDesign:HintAssist.Hint="Search..."
                             Foreground="White"
                             FontSize="25"
                             FontWeight="Bold"
                             Width="650"
                             Height="70" />
        </StackPanel>

        <Border Grid.Column="2"
                CornerRadius="0,45,45,0"
                BorderThickness="2"
                BorderBrush="white"
                Background="#999a9e"
                Opacity="0.9"
                Margin="-2,0,0,0">
            <StackPanel>
                <Button HorizontalAlignment="Right" Margin="10" Style="{StaticResource MaterialDesignFlatButton}" Click="Close_Click">
                    <materialDesign:PackIcon Kind="Close"/>
                </Button>

                <Border Width="150"
                        Height="150"
                        CornerRadius="80"
                        BorderThickness="1"
                        BorderBrush="#112152">
                    <Border.Background>
                        <ImageBrush/>
                        <!-- aici o sa apara poza utilizatorului selectat -->
                    </Border.Background>
                </Border>

                <TextBlock Text="Username"
                           HorizontalAlignment="Center"
                           Margin="0 10 0 0"
                           Foreground="#112152"
                           FontSize="18" FontWeight="Bold"/>
                <TextBlock Text="Complete Name"
                           FontSize="13"
                           Foreground="#112152"
                           HorizontalAlignment="Center" Opacity="0.8"/>
                <TextBlock Text="Description/Status of the selectetd user"
                           FontSize="8"
                           Foreground="#112152"
                           HorizontalAlignment="Center" Opacity="0.8"/>

                <StackPanel Margin="20">
                    <StackPanel Orientation="Horizontal"
                                Margin="0 3">
                        <materialDesign:PackIcon Kind="Location"
                                                 Foreground="#112152" />
                        <TextBlock Text="Location/Street of the user"
                                   Margin="10 0"
                                   Foreground="#112152" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 3">
                        <materialDesign:PackIcon Kind="Cellphone"
                                                 Foreground="#112152" />
                        <TextBlock Text="Phone number of the user"
                                   Margin="10 0"
                                   Foreground="#112152" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal"
                                Margin="0 3">
                        <materialDesign:PackIcon Kind="Email"
                                                 Foreground="#112152" />
                        <TextBlock Text="Email of the user"
                                   Margin="10 0"
                                   Foreground="#112152"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="20 0">
                    <Border Width="50" Height="50" CornerRadius="30" Margin="5">
                        <Border.Background>
                            <ImageBrush ImageSource="https://img.dotnet9.com/logo.png"/>
                        </Border.Background>
                    </Border>
                    <Border Width="50" Height="50" CornerRadius="30" Margin="5">
                        <Border.Background>
                            <ImageBrush ImageSource="https://img.dotnet9.com/logo.png"/>
                        </Border.Background>
                    </Border>
                    <Border Width="50" Height="50" CornerRadius="30" Margin="5">
                        <Border.Background>
                            <ImageBrush ImageSource="https://img.dotnet9.com/logo.png"/>
                        </Border.Background>
                    </Border>
                </StackPanel>
            </StackPanel>
        </Border>

    </Grid>
</UserControl>
